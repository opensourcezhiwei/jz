<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.zny.dao.LoanDao">

	<select id="totalCountByParentId" resultType="int">
		SELECT COUNT(l.id) 
		FROM z_loan l
		LEFT JOIN z_user u ON l.user_id = u.id
		<where>
			<if test="loan != null">
				<if test="loan.status != null">
					AND l.`status` = #{loan.status}
				</if>
			</if>
			<if test="parentId != null">
				AND u.parentId = #{parentId}
			</if>
		</where>
	</select>

</mapper>